#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

PHANTOM_VERSION="1.4.1"
PHANTOM_PACKAGE="http://code.google.com/p/phantomjs/downloads/detail?name=phantomjs-1.4.1-linux-x86-dynamic.tar.gz"

echo "-----> Vendoring PhantomJS 1.4"

VENDORED_PHANTOM="$BUILD_DIR/vendor/phantom"

mkdir -p $VENDORED_PHANTOM  && curl $PHANTOM_PACKAGE -s -o -  | tar xzf - -C $VENDORED_PHANTOM

# Set up so we can use PhantomJS right away
export PATH="$VENDORED_PHANTOM/bin:$PATH"

echo "Using PhantomJS $PHANTOM_VERSION" | indent
